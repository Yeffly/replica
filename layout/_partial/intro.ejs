<%
config.social = config.social || {};
theme.social = theme.social || {};
var github = config.social.github || theme.social.github;
var gitlab = config.social.gitlab || theme.social.gitlab;
var bitbucket = config.social.bitbucket || theme.social.bitbucket;
var stackoverflow = config.social.stackoverflow || theme.social.stackoverflow;
var instagram = config.social.instagram || theme.social.instagram;
var weibo = config.social.weibo || theme.social.weibo;
var twitter = config.social.twitter || theme.social.twitter;
var facebook = config.social.facebook || theme.social.facebook;
var steam = config.social.steam || theme.social.steam;
var twitch = config.social.twitch || theme.social.twitch;
var youtube = config.social.youtube || theme.social.youtube;
var bilibili = config.social.bilibili || theme.social.bilibili;
var docker = config.social.docker || theme.social.docker;
var npm = config.social.npm || theme.social.npm;
var csdn = config.social.csdn || theme.social.csdn;

var location = config.location || theme.location;
var qq = config.qq || theme.qq;
var wechat = config.wechat || theme.wechat;
var email = config.email || theme.email;
var url = config.url;
var avatar = config.avatar || theme.avatar || 'https://octodex.github.com/images/baracktocat.jpg'
%>

<div class="blog-intro">
  <div class="blog-intro-user">
    <img class="avatar" src="<%= avatar %>">
    <div class="user-name">
      <div class="blog-title"><%= theme.title %></div>
      <div class="blog-author"><%= theme.author %></div>
        <ul class="user-detail mobile-only">
    <% if(location){ %>
    <li>
      <i class="fa fa-map-marker"></i>
      <%= location %>
    </li>
    <% }if(qq){ %>
    <li>
      <i class="fa fa-qq"></i>
      <%= qq %>
    </li>
    <% }if(wechat){ %>
    <li>
      <i class="fa fa-wechat"></i>
      <%= wechat %>
    </li>
    <% }if(email){ %>
    <li>
      <i class="fa fa-envelope-o"></i>
      <a href="mailto:<%= email %>"><%= email %></a>
    </li>
    <% } %>
    <li>
      <i class="fa fa-link"></i>
      <a href="<%= url %>"><%= url %></a>
    </li>
  </ul>
    </div>
    <div class="blog-description">
      <%= theme.description %>
    </div>
  </div>

  <ul class="user-detail desktop-only">
    <% if(location){ %>
    <li>
      <i class="fa fa-map-marker"></i>
      <%= location %>
    </li>
    <% }if(qq){ %>
    <li>
      <i class="fa fa-qq"></i>
      <%= qq %>
    </li>
    <% }if(wechat){ %>
    <li>
      <i class="fa fa-wechat"></i>
      <%= wechat %>
    </li>
    <% }if(email){ %>
    <li>
      <i class="fa fa-envelope-o"></i>
      <a href="mailto:<%= email %>"><%= email %></a>
    </li>
    <% } %>
    <li>
      <i class="fa fa-link"></i>
      <a href="<%= url %>"><%= url %></a>
    </li>
  </ul>

  <div class="social-media desktop-only">
    <h4>Social Media</h4>
    <ul>
      <% if(github){ %>
      <li class="social-media-item"><a href="<%= github %>" target="_blank"><i class="fa fa-github"></i></a></li>
      <% } if(gitlab){ %>
      <li class="social-media-item"><a href="<%= gitlab %>" target="_blank"><i class="fa fa-gitlab"></i></a></li>
      <% } if(bitbucket){ %>
      <li class="social-media-item"><a href="<%= bitbucket %>" target="_blank"><i class="fa fa-bitbucket-square"></i></a></li>
      <% } if(stackoverflow){ %>
      <li class="social-media-item"><a href="<%= stackoverflow %>" target="_blank"><i class="fa fa-stack-overflow"></i></a></li>
      <% } if(instagram){ %>
      <li class="social-media-item"><a href="<%= instagram %>" target="_blank"><i class="fa fa-instagram"></i></a></li>
      <% } if(weibo){ %>
      <li class="social-media-item"><a href="<%= weibo %>" target="_blank"><i class="fa fa-weibo"></i></a></li>
      <% } if(twitter){ %>
      <li class="social-media-item"><a href="<%= twitter %>" target="_blank"><i class="fa fa-twitter"></i></a></li>
      <% } if(facebook){ %>
      <li class="social-media-item"><a href="<%= facebook %>" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
      <% } if(steam){ %>
      <li class="social-media-item"><a href="<%= steam %>" target="_blank"><i class="fa fa-steam-square"></i></a></li>
      <% } if(twitch){ %>
      <li class="social-media-item"><a href="<%= twitch %>" target="_blank"><i class="fa fa-twitch"></i></a></li>
      <% } if(youtube){ %>
      <li class="social-media-item"><a href="<%= youtube %>" target="_blank"><i class="fa fa-youtube-play"></i></a></li>
      <% } if(bilibili){ %>
      <li class="social-media-item"><a href="<%= bilibili %>" target="_blank" style="text-decoration:none"><i class="icon iconfont icon-CN_bilibiliB" style="font-size:34px"></i></a></li>
      <% } if(docker){ %>
      <li class="social-media-item"><a href="<%= docker %>" target="_blank" style="text-decoration:none"><i class="icon iconfont icon-Docker" style="font-size:25px"></i></a></li>
      <% } if(npm){ %>
      <li class="social-media-item"><a href="<%= npm %>" target="_blank" style="text-decoration:none"><i class="icon iconfont icon-npm" style="font-size:26px"></i></a></li>
      <% } if(csdn){ %>
      <li class="social-media-item"><a href="<%= csdn %>" target="_blank" style="text-decoration:none"><i class="icon iconfont icon-csdn" style="font-size:24px"></i></a></li>

      <% } %>
    </ul>
  </div>
</div>
